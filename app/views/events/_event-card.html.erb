<% icon_array = ["light", "fire", "death", "forest", "water"] %>

<div class="event-card">
  <div class="titlebar">
    <h1><%= event.game %></h1>
    <div class="element-icons">
      <% rand(1..2).times do %>
        <%= image_tag("#{icon_array.sample}") %>
      <% end %>
    </div>
  </div>
  <div class="main-img-container">
    <%= cl_image_tag event.photo, class: "main-img" %>
  </div>
  <div class="infobar">
    <p> <%= event.date.strftime('%A, %b %d') %></p>
  </div>
  <div class="description-box">
    <p><%= event.description %></p>
  </div>
</div>

