<div class="event-card">
  <%= image_tag"https://picsum.photos/400/100", class: "event-pic"%>
  <p id="card-date"><%= event.date.strftime('%A, %b %d') %></p>
  <div class="event-content">
    <div class="left-content">
      <h1>We are playing <%= event.game %></h1>
    <div class="right-content">
        <p id="card-location"> Joins us at <%= event.location %></p>
    </div>
      <div class="description">
      <p><%= event.description %></p>
      </div>
    </div>
  <%= cl_image_tag event.user.profile.photo, gravity: "face", width: 85, height:85, crop: "thumb", class: "event-card-profile" %>
  </div>
</div>
