<div class="banner">

 <!--  <%= link_to   %>
   -->
  <% if user_signed_in? %>
    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "home-btn home-login"%>
  <% else %>
    <%= link_to "Log In", new_user_session_path, data: { toggle: "modal", target: "#login-modal" }, class: "home-btn home-login"%>
  <% end %>

  <div class="banner-info">
    <div id="logo">
      <%= image_tag('logo.svg') %>
    </div>
    <h1 class="dungeon-text">Air Dungeons & Dragons</h1>
    <h3>Never Split up the Party</h3>

    <div class="home-btns">
      <div class="full-btn">
        <h3>Looking for an Adventure?</h3>
        <%= link_to events_path do %>
          <div class="home-btn">
            <%= image_tag("airdnd") %>
            <p>Join a Party</p>
          </div>
        <% end %>
      </div>
      <div class="full-btn">
        <h3>Looking to start your own?</h3>
        <% if current_user %>
          <%= link_to new_event_path do %>
            <div class="home-btn">
              <%= image_tag("airdnd") %>
              <p>Recruit Players!</p>
            </div>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, data: { toggle: "modal", target: "#login-modal" } do %>
            <div class="home-btn">
              <%= image_tag("airdnd") %>
              <p>Recruit Players!</p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <button type="button" class="close close-white" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= render 'devise/sessions/new', resource: User.new, resource_name: :user,  devise_mapping: Devise.mappings[:user]%>
    </div>
  </div>
</div>

